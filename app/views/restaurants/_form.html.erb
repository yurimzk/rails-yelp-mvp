<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <% if restaurant.new_record? %>
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    <% else %>
      <%= f.submit 'Update', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
